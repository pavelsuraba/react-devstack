{ 
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    },    
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "module": true    
  },  
  "plugins": [
    "react"
  ],
  "rules": {
    "class-methods-use-this": [0],
    "global-require": [0],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],    
    "space-before-function-paren": ["error", {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "ignore"
    }],
    "no-console": [0],
    "no-extra-semi": ["error"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-shadow": [0],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": [2, {"varsIgnorePattern": "^_"}],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",    
    "wrap-iife": [2, "inside"]
  },
  "extends": "eslint:recommended"
}